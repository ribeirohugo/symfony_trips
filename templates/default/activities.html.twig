{% extends 'base.html.twig' %}
{% block body %}

<div class="card mb-4">
	<div class="card-header">
		<i class="fas fa-table mr-1"></i>
		{{ title }}
	</div>
	<div class="card-body">
		<div class="table-responsive">
			<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
				<thead>
					<tr>
						<th>Id</th>
						<th>Name</th>
						<th>Last Occurrence</th>
						<th>Materials</th>
						<th>Options</th>
					</tr>
				</thead>
				<tfoot>
					<tr>
						<th>Id</th>
						<th>Name</th>
						<th>Last Occurrence</th>
						<th>Materials</th>
						<th>Options</th>
					</tr>
				</tfoot>
				<tbody>
					{% for activity in activities%}
					<tr>
						<td>{{ activity.id }}</td>
						<td>{{ activity.name }}</td>
						<td></td>
						<td></td>
						<td>
						<a href="{{ url('activity_edit', {id: activity.id} ) }}"><i class="fas fa-fw fa-edit"></i></a>
						<a href="{{ url('activity_delete', {id: activity.id} ) }}"><i class="fas fa-fw fa-trash-alt"></i></a>
						</td>
					</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
</div>

{% endblock %}